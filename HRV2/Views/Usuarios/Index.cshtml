@model IEnumerable<HRV2.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Usuarios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Usuarios" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
    </p>

</form>

<table id="tblCustomers" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posicion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posicion)
            </td>
            <td>
                <a asp-action="Edit" class= "btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class= "btn btn-primary" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class= "btn btn-danger" asp-route-id="@item.Id">Delete</a>|
                <a asp-action="Evaluar" class="btn btn-secondary" asp-route-id="@item.Id">Evaluar</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
