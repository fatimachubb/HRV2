<p> <strong>Evalúa la respuesta del candidato de acuerdo con la escala de calificación:</strong>.</p>

<script>
    var selectedScores = [];

    // JavaScript function to handle button clicks for each set of scores
    function scoreQuestion(setIndex, score) {
        var buttonId = "scoreButton_" + setIndex + "_" + score;
        var button = document.getElementById(buttonId);

        // Check if the maximum number of scores has been reached
        if (selectedScores.length >= numSets) {
            // Find and deselect the earliest selected score
            var earliestSelectedScore = selectedScores.shift();
            var earliestSelectedButtonId = "scoreButton_" + earliestSelectedScore.setIndex + "_" + earliestSelectedScore.score;
            var earliestSelectedButton = document.getElementById(earliestSelectedButtonId);
            earliestSelectedButton.classList.remove("selected");
        }

        // Toggle the 'selected' class for the clicked button
        button.classList.toggle("selected");

        // Update the selected scores array
        var index = selectedScores.findIndex(function (s) {
            return s.setIndex === setIndex;
        });

        if (index > -1) {
            selectedScores[index] = { setIndex: setIndex, score: score };
        } else {
            selectedScores.push({ setIndex: setIndex, score: score });
        }

        calculateAverage();
    }

    // Function to calculate and display the average of the selected scores
    function calculateAverage() {
        if (selectedScores.length !== numSets) {
            // Display a message when the required number of sets is not selected
            document.getElementById("averageScore").textContent = "Average Score: Not enough sets selected";
            return;
        }

        // Calculate the average of the selected scores
        var sum = selectedScores.reduce(function (a, b) {
            return a + b.score;
        }, 0);

        var average = sum / selectedScores.length;

        // Display the average on the screen
        document.getElementById("averageScore").textContent = "Average Score: " + average.toFixed(2);
    }
</script>

